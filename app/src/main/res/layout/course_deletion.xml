<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDeletion">

    <Button
        android:id="@+id/button_delete"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/lime_green"
        android:text="@string/delete_course"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseCode"
        app:layout_constraintVertical_bias="0.189" />

    <Button
        android:id="@+id/button_delete_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/lime_green"
        android:text="@string/delete_course_name"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseCode"
        app:layout_constraintVertical_bias="0.359" />

    <Button
        android:id="@+id/button_delete_course_code"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/lime_green"
        android:text="@string/delete_course_code"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseCode"
        app:layout_constraintVertical_bias="0.527" />

    <Button
        android:id="@+id/button_delete_offering"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/lime_green"
        android:text="@string/delete_course_session_offerings"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseCode"
        app:layout_constraintVertical_bias="0.697" />

    <Button
        android:id="@+id/button_delete_preq"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/lime_green"
        android:text="@string/delete_course_prerequisites"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseCode"
        app:layout_constraintVertical_bias="0.871" />

    <TextView
        android:id="@+id/courseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/course_code"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionCD" />

    <EditText
        android:id="@+id/enteredCourseCode"
        android:layout_width="207dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/enter_course_code_here"
        android:textColor="#4E4646"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseCode"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/enterDetailInsCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/enter_course_details"
        android:textColor="#2CA31F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructionCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/please_fill_in_the_following_details_to_delete_a_existing_course"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterDetailInsCD" />

</androidx.constraintlayout.widget.ConstraintLayout>